<p id="notice"><%= notice %></p>
<div class="container">
  <h1 class="text-center">Salas</h1>
  <hr>
  <%= link_to 'Nueva Sala +', new_sala_path , class: "btn btn-success" %>
  <br><br>
  <table class="table">
    <thead class="thead-dark">
      <tr>
        <th>#</th>
        <th>Nombre</th>
        <th>Minutos</th>
        <th colspan="3">Opciones</th>
      </tr>
    </thead>
    <tbody>
      <% @salas.each do |sala| %>
        <tr>
          <td><%= sala.nombre %></td>
          <td><%= sala.apikey %></td>
          <td><%= sala.sessionID %></td>
          <td><%= sala.token %></td>
          <td><%= sala.minutos %></td>
          <td><%= link_to 'Show', sala %></td>
          <td><%= link_to 'Edit', edit_sala_path(sala) %></td>
          <td><%= link_to 'Destroy', sala, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>
